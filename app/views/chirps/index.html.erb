<p id="notice"><%= notice %></p>

<h1>Chirps</h1>

<% if current_user %>
  <div align=“right”>
    Hello, <%= current_user.email %><br />
    <%= link_to('Sign out', destroy_user_session_path, :method => :delete)%>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Chirp</th>
      <th>Photo</th>
      <th>File name</th>
      <th>File type</th>
      <th>Chirped at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chirps.each do |chirp| %>
      <tr>
        <td><%= chirp.user_id %></td>
        <td><%= chirp.chirp %></td>
        <td>
          <% if chirp.photo %>
          <p>
            <% if chirp.file_type =~ /^image\/.*?(png|jpeg|gif)$/ %>
            <%= image_tag url_for({:action => 'photo', :id=> chirp.id,
               :filename => chirp.file_name}), :alt => chirp.file_name %>
            <% end %>
            <br />
          </p>
          <% end %>
        </td>
        <td><%= chirp.chirped_at %></td>
        <td><%= link_to 'Show', chirp %></td>
        <td><%= link_to 'Edit', edit_chirp_path(chirp) %></td>
        <td><%= link_to 'Destroy', chirp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chirp', new_chirp_path %>
